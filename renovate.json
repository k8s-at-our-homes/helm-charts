{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":gitSignOff"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "matchDatasources": ["helmv3"],
      "matchFileNames": ["charts/*/Chart.{yaml,yml}"],
      "additionalBranchPrefix": "chart-deps-",
      "semanticCommitScope": "{{packageFileDir}}",
      "separateMinorPatch": false,
      "bumpVersions": [
        {
          "filePatterns": ["charts/*/Chart.{yaml,yml}"],
          "matchStrings": ["version:\\s*\"?(?<version>[^\"\\s]+)\"?"],
          "bumpType": "patch"
        }
      ]
    },
    {
      "matchDatasources": ["docker"],
      "matchFileNames": ["charts/*/values.yaml"],
      "bumpVersions": [
        {
          "filePatterns": ["{{packageFileDir}}/Chart.{yaml,yml}"],
          "matchStrings": ["version:\\s(?<version>[^\\s]+)"],
          "bumpType": "{{#if isPatch}}patch{{else}}{{#if isMinor}}minor{{else}}major{{/if}}{{/if}}"
        }
      ]
    },
    {
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["digest"],
      "matchFileNames": ["charts/*/values.yaml"],
      "bumpVersions": [
        {
          "filePatterns": ["{{packageFileDir}}/Chart.{yaml,yml}"],
          "matchStrings": ["version:\\s(?<version>[^\\s]+)"],
          "bumpType": "minor"
        }
      ]
    },
    {
      "matchPackageNames": [
        "ghcr.io/immich-app/immich-server",
        "ghcr.io/immich-app/immich-machine-learning"
      ],
      "groupName": "immich"
    }
  ],
  "prHourlyLimit": 0,
  "dependencyDashboard": true,
  "prConcurrentLimit": 20,
  "branchConcurrentLimit": 20,
  "rebaseWhen": "behind-base-branch",
  "configMigration": true,
  "separateMinorPatch": true,
  "separateMajorMinor": true,
  "separateMultipleMajor": true
}
