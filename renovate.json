{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":gitSignOff"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch"
      ],
      "automerge": true
    },
    {
      "matchPackageNames": [
        "ghcr.io/immich-app/immich-server",
        "ghcr.io/immich-app/immich-machine-learning"
      ],
      "groupName": "immich"
    },
    {
      "description": "Bump chart version when Docker images in values.yaml are updated",
      "matchFileNames": ["charts/*/values.yaml"],
      "matchDatasources": ["docker"],
      "bumpVersions": [
        {
          "name": "Updating Chart.yaml version",
          "filePatterns": ["Chart.yaml"],
          "bumpType": "{{#if isPatch}}patch{{else}}{{#if isMinor}}minor{{else}}major{{/if}}{{/if}}",
          "matchStrings": ["^version: (?<version>.+)$"]
        }
      ]
    },
    {
      "description": "Bump chart version for digest updates",
      "matchDatasources": ["docker"],
      "matchUpdateTypes": ["digest"],
      "bumpVersions": [
        {
          "name": "Updating Chart.yaml version for digest updates",
          "filePatterns": ["Chart.yaml"],
          "bumpType": "minor",
          "matchStrings": ["^version: (?<version>.+)$"]
        }
      ]
    }
  ],
  "prHourlyLimit": 0,
  "dependencyDashboard": true,
  "prConcurrentLimit": 20,
  "branchConcurrentLimit": 20,
  "bumpVersion": "{{#if isPatch}}patch{{else}}{{#if isMinor}}minor{{else}}major{{/if}}{{/if}}",
  "rebaseWhen": "behind-base-branch",
  "configMigration": true,
  "separateMinorPatch": true,
  "separateMajorMinor": true,
  "separateMultipleMajor": true
}
